<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/favourite_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_icon_heart_filled" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/product_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/search_background" />

            <ImageView
                android:id="@+id/no_image_found_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_no_image_found" />

        </RelativeLayout>

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_regular"
            android:maxLines="5"
            android:text="kldjfkljfjkldjfkllfjjfljfklkfjdjfklsdjfiojkldjfkljfjkldjfkllfjjfljfklkfjdjfklsdjfiojkldjfkljfjkldjfkllfjjfljfklkfjdjfklsdjfiojkldjfkljfjkldjfkllfjjfljfklkfjdjfklsdjfiojkldjfkljfjkldjfkllfjjfljfklkfjdjfklsdjfiojkldjfkljfjkldjfkllfjjfljfklkfjdjfklsdjfiojkldjfkljfjkldjfkllfjjfljfklkfjdjfklsdjfioj"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bestsellerItemIv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/yourPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="$99.99"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:fontFamily="@font/sf_pro_bold" />

        <TextView
            android:id="@+id/listPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$243.50"
            android:textColor="@color/text_grey_color"
            android:textSize="14sp"
            app:fontFamily="@font/sf_pro_bold" />

    </LinearLayout>

</LinearLayout>
